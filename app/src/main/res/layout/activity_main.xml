<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <com.google.android.material.navigation.NavigationView
            android:layout_width="85dp"
            android:layout_height="66dp"
            android:id="@+id/navMenu" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="92dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="160dp"
            app:menu="@menu/add_note_menu" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="573dp">
    </com.google.android.material.navigation.NavigationView>
    <ListView
            android:id="@+id/notes_ListView"
            android:layout_width="409dp"
            android:layout_height="548dp"
            android:background="@null"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="175dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.934"
            android:layout_marginEnd="2dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notes"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="60dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="1dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="125dp" android:layout_marginEnd="126dp"
            app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>