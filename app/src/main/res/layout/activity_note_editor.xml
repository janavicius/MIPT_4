<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".NoteEditorActivity">

    <EditText
            android:id="@+id/note_EditText"
            android:layout_width="372dp"
            android:layout_height="563dp"
            android:gravity="top"
            android:background="@null"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="106dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp" android:layout_marginEnd="26dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="34dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="DELETE"
            android:layout_width="102dp"
            android:layout_height="74dp" android:id="@+id/delete"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="228dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="962dp" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="EXIT TO SAVE"
            android:layout_width="102dp"
            android:layout_height="74dp" android:id="@+id/aaa"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="76dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="962dp" app:layout_constraintVertical_bias="0.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>